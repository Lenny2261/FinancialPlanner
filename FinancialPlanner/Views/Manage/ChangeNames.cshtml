@model FinancialPlanner.Models.EditName

@using (Html.BeginForm())
{
    <h2>Change Name</h2>
    <br />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        First Name:
        <br />
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        Last Name:
        <br />
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-default btn-info" value="Change" />
        </div>
    </div>

}